package hello;

import java.util.Scanner;

public class hello{

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in );
		int num = in.nextInt();
		int x = 1;
		String y = Integer.toBinaryString(num);//将num转换为二进制，存在数组string里
		if(num!=0) {
			System.out.print(32-y.length());//用32减数组长度
		}
		else System.out.print(32);
	}	
}
