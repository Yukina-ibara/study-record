package hello;

import java.util.Scanner;

public class hello{

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in );
		int num = in.nextInt();
		int x = 1;
		int y = 0;//num的位数
		for(;num>=x;x*=2) {//如果num小于这个位数最大的值
			y++;//则多一位
		}
		System.out.print(32-y);//前导零的个数等于32减num的位数
	}
}
